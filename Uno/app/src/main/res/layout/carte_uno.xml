<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/backgroundCarte"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20sp"
        android:background="@color/redUno"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/textCarte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/gris"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/backgroundCarte"
        app:layout_constraintTop_toTopOf="@+id/backgroundCarte" />

    <TextView
        android:id="@+id/textCarte3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/gris"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundCarte"
        app:layout_constraintEnd_toEndOf="@+id/backgroundCarte" />

    <TextView
        android:id="@+id/textCarte2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/gris"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundCarte"
        app:layout_constraintEnd_toEndOf="@+id/backgroundCarte"
        app:layout_constraintStart_toStartOf="@+id/backgroundCarte"
        app:layout_constraintTop_toTopOf="@+id/backgroundCarte" />

    <ImageView
        android:id="@+id/imageUno"
        android:layout_width="99dp"
        android:layout_height="105dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundCarte"
        app:layout_constraintEnd_toEndOf="@+id/backgroundCarte"
        app:layout_constraintStart_toStartOf="@+id/backgroundCarte"
        app:layout_constraintTop_toTopOf="@+id/backgroundCarte"
        app:srcCompat="@drawable/choix_couleur" />
</androidx.constraintlayout.widget.ConstraintLayout>